{
  "name": "@obsidize/rotating-file-stream",
  "version": "0.0.1",
  "description": "A rotating file stream based on the cordova File plugin API",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "karma start",
    "test:single": "karma start --single-run",
    "build": "tsc",
    "clean": "rimraf ./dist ./coverage",
    "rebuild": "run-s clean build",
    "coverage:open": "open-cli \".\\coverage\\*\\html\\index.html\"",
    "coverage": "run-s test:single coverage:open",
    "copy:package": "cpy ./package.json ./dist/",
    "copy:readme": "cpy ./README.md ./dist/",
    "copy:assets": "run-p copy:package copy:readme",
    "dist:publish": "npm publish ./dist",
    "git:publish": "node ./scripts/release-publish.js",
    "release:prepare": "node ./scripts/release-prepare.js",
    "release:test": "run-s rebuild coverage copy:assets",
    "release:publish": "run-s git:publish",
    "release:prepare:patch": "npm run release:prepare -- --release-as patch",
    "bump": "run-s release:prepare:patch release:test release:publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jospete/obsidize-rotating-file-stream.git"
  },
  "keywords": [
    "cordova",
    "ionic",
    "file",
    "stream",
    "rotating",
    "rotate",
    "log",
    "logger"
  ],
  "author": "Josh Noel <jpnoel618@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jospete/obsidize-rotating-file-stream/issues"
  },
  "homepage": "https://github.com/jospete/obsidize-rotating-file-stream#readme",
  "devDependencies": {
    "@ionic-native/file": "^5.31.1",
    "@types/jasmine": "^3.6.6",
    "cpy-cli": "^3.1.1",
    "jasmine-core": "^3.6.0",
    "karma": "^6.2.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-typescript": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "yargs": "^16.2.0"
  }
}